<div class="card mt-3">
    <h5 class="card-header bg-secondary text-light">
        <a id="post-link" href="/review/{{id}}">{{user.username}} by {{title}} </a>
    </h5>
    <div class="card-body bg-light">
        <p class="card-text">{{review_body}}</p>
    </div>
    {{#if canEdit}}
    <div class="card-footer">
        <a href="/reviews/edit/{{id}}" class="edit-link">Edit Post</a>
    </div>
    {{/if}}
</div>
<div class="modal" tabindex="-1" role="dialog" id="modalError">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Sorry! that didn't work. try again!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>