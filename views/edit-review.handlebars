<article>
    <h2>
        Edit Review
    </h2>
    <form class="edit-review-form">
        <div class="input-group mb-3">
            <span class="input-group-text">Title</span>
            <input name="review-title" type="text" class="form-control" value="{{review.title}}" />
        </div>
        <div class="input-group">
            <span class="input-group-text">Body</span>
            <textarea class="form-control" name="review-body" id="review-body">{{review.review_body}}</textarea>
        </div>
        <button type="submit" class="save-review btn btn-primary my-2">Save Review</button>
        <button type="button" class="delete-review-btn btn btn-danger my-2">Delete Review</button>
    </form>
</article>
<div class="modal" tabindex="-1" role="dialog" id="modalError">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Error</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Sorry! that didn't work. try again!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/edit-review.js"></script>
<script src="/javascript/delete-review.js"></script>