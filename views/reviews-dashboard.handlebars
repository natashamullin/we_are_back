<section class="container">
  <h2>Create New Review</h2>
  <form class="new-review-form">
    <div>
      <label for="review-title">Title</label>
      <input type="text" id="review-title" name="review-title" />
    </div>
    <div>
      <label for="review-body">Body</label>
      <input id="review-body" name="review-body" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if reviews.length}}
<section class="container">
    <h2>Your Reviews</h2>
      {{#each reviews as |review|}}
        {{> review-data review}}
        <a href="/reviews/edit/{{review.id}}" class="edit-link">Edit Review</a>
      {{/each}}
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
